<% content_for(:title,  @movie.title ) %>
<div class="jumbotron">
	<div class="clearfix" >
		<img style="float:left" src="<%= @movie.photo%>"/>
		<div class="person-text">
			<div class="col-sm-8 mx-auto">
				<h1><%= @movie.title %></h1>
				<p><%= @movie.desc %></p>
        <p> Genres: <% @movie.genres.each do |genre| %>
              <%= genre.name %>,
            <% end %>
        </p>
			</div>
		</div>
	</div>
</div>
<% if @movie.people.any? %>
  <h2> The Cast</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">First</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
      <% @movie.people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td>-</td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>