<h1>Editing Genre</h1>

<%= form_for :genre, url: genre_path(@genre), method: :patch do |f| %>
    <% if @genre.errors.any? %>
        <% @genre.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>
    <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :desc %><br/>
        <%= f.text_area :desc,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :photo %><br/>
        <%= f.text_field :photo_url,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.submit class: "btn btn-primary" %>
    </p
<% end %>

