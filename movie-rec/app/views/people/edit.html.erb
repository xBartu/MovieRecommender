<h1>Editting Person</h1>

<%= form_for :person, url: person_path(@person), method: :patch do |f| %>
    <% if @person.errors.any? %>
        <% @person.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>
    <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.label :bio %><br/>
        <%= f.text_area :bio,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :photo %><br/>
        <%= f.text_field :photo_url,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :birthday %><br/>
        <%= f.date_field :birthday,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.submit class: "btn btn-primary" %>
    </p>
<% end %>

