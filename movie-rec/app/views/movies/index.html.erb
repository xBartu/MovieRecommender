<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-4">
      <img src="<%= movie.photo_url %>">
      <h2 class="movie-title"><%= movie.title %></h2>
      <p><%= movie.desc.first(400) %>...</p>
      <p><a class="btn btn-info" href="/movie/<%= genre.id %>" role="button">View Details</a></p>
    </div>
  <% end %>
</div>