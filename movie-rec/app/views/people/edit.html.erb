<h1>Editting Person</h1>

<%= form_for :person, url: person_path(@person), method: :patch do |f| %>
    <% if @person.errors.any? %>
        <% @person.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>
    <p>
        <%= f.label :first_name %><br/>
        <%= f.text_field :first_name,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.label :last_name %><br/>
        <%= f.text_field :last_name,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.label :bio %><br/>
        <%= f.text_area :bio,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :photo %><br/>
        <%= f.text_field :photo_url,  class: "form-control text"%> 
    </p>

    <p>
    </p>
    <p>
        <%= f.label :role %><br/>
        <select name="person[role_id]" class="form-control">
            <% @roles.each do |role| %>
              <option value="<%=role.id%>"><%=role.title%></option>
            <% end %>
        </select>
    </p>
    <p>
        <%= f.submit class: "btn btn-primary" %>
    </p
<% end %>

