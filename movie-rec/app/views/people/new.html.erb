<h1>Adding Person</h1>

<%= form_for :person, url: people_path do |f| %>
    <% if @person.errors.any? %>
        <% @person.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>
    <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.label :bio %><br/>
        <%= f.text_area :bio,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :photo %><br/>
        <%= f.text_field :photo_url,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :birthdate %><br/>
        <%= f.datetime_field :birthdate,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.submit class: "btn btn-primary" %>
    </p
<% end %>

