<h1>Editting Movie</h1>

<%= form_for :movie, url: movie_path(@movie), method: :patch do |f| %>
    <% if @movie.errors.any? %>
        <% @movie.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.label :desc %><br/>
        <%= f.text_area :desc,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :photo %><br/>
        <%= f.text_field :photo,  class: "form-control text"%> 
    </p>

    <p>
        <%= f.label :relase_date %><br/>
        <%= f.date_field :relase_date,  class: "form-control text"%> 
    </p>
    <p>
        <%= f.submit class: "btn btn-primary" %>
    </p>
<% end %>

